<div class="container">
  <div class="title">
    <h2>Create a new flat</h2>
  </div>
  <div class="new-flat-form">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit %>
    <% end %>
  </div>

</div>